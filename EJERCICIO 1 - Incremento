x=sym('x');
% Solicitar la ecuación al usuario y convertirla a función inline
f = input('\nIngrese la ecuacion no lineal en terminos de x: ', 's');
f = inline(f);
fprintf('El intervalo a utilizar es [-5, 5]\n');
h = input('Ingrese el incremento: ');

% Definir el rango y el incremento
m = -5;
n = 5;
fprintf('\nRaíces encontradas:\n');

% Iniciar bucle para incrementos
for x = m:h:n
    % Calcular el valor de la ecuación para cada x
    resultado = f(x);
    
    % Verificar si el resultado está suficientemente cerca de cero
    if abs(resultado) < 10^(-12)
        fprintf('x = %.2f\n', x); % Imprimir la raíz encontrada
    end
end
