Q=1;
while Q==1
    x=sym('x');
    % Solicitar la ecuación al usuario y convertirla a función inline
    f=input('Ecuacion no lineal a utilizar: \n');
    f=inline(f);
    
    h = 1;
    m = -1000;
    n = 1000;

    % Iniciar bucle for para el primer incremento "h"
    fprintf('\nRaíces encontradas: \n');
    for x = m:h:n
        
        a=m; b=a+h;
        if f(a)*f(b) < 0 % Identificamos los primeros sub-limites de la primera solucion
            % Aplicamos un sub-incremento y nuevo punto "xf"
            h1=10^(-12);
            xi=a; xf=xi+h1;
            while f(xi)*f(xf) > 0
                xi=xf; xf=xi+h1;
            end
            c=(xi+xf)/2;
        end
        
        % Calcular el valor de la ecuación para cada x; aqui "c" es como "f(c)"
        c=f(x);
        % Verificar si "f(c)" está suficientemente cerca de cero
        if abs(c) < 10^(-12)
            fprintf('x = %5.2f \n', x); % Imprimir la raíz encontrada
        end
    end
    
    Q=input('Ingrese 1 para continuar y diferente de 1 para terminar. \n');
    clc;
end
